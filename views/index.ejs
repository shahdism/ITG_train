<%- include('layout/header') -%>
<div class ="container">
<div class ="row my-4">
    <div class="col-lg-12"></div>
<div class="table-responsive">
    <% if (users!= '') { %>
        
    <table class=" table table-striped text-center">
        <thead>
            <tr class="table-dark">
                <th>ID</th>
                <th>IMAGE</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>PHONE</th>
                <th>Action</th>
        
            </tr >
               </thead>
        <tbody>
       
            <% users.forEach(function(row,index) { %>
                <tr class="align-middle">
                    <td> <%= index %> </td>
                    <td><img src="<%= row.image%>"width ="50" class= "img-thumbnail"></td>
                    <td><%=row.name%></td>
                    <td><%=row.email%></td>
                    <td><%=row.phone%></td>
                    <td>
                    <a href=" /delete/<%=row._id%>"  class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                    
                    </td>
                    </tr>
                    
                    <% }); %>
        
        </tbody>
        
            </table>
    <% } else{%>
    <h1     class="text-center text-secondary mt-5"> no user found in dataBase!  </h1>
        <%} %>


</div>

</div>

</div>


<%- include('layout/footer') -%>